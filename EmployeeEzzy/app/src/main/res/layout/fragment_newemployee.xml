<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".newemployee">


       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/tuser3"
           android:layout_marginRight="@dimen/_20sdp"
           android:layout_marginTop="@dimen/_20sdp"
           android:layout_marginBottom="@dimen/_40sdp"
           android:layout_marginLeft="@dimen/_20sdp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_centerInParent="true"
               android:background="@color/white"
               android:orientation="vertical"
               android:paddingLeft="@dimen/_20sdp"
               android:paddingRight="@dimen/_20sdp"
               android:paddingBottom="@dimen/_20sdp">

               <TextView
                   android:id="@+id/textView"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Student Details"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:textSize="@dimen/_20sdp"
                   android:textColor="@color/black"
                   android:layout_marginBottom="@dimen/_20sdp"
                   android:layout_marginTop="@dimen/_20sdp" />

               <TextView
                   android:id="@+id/erremp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:gravity="center"
                   android:textStyle="bold"
                   android:textSize="@dimen/_15sdp"
                   android:textColor="@color/design_default_color_error"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Name"
                   android:gravity="left"
                   android:textStyle="bold"
                   android:textSize="@dimen/_16sdp"
                   android:layout_marginBottom="@dimen/_5sdp"
                   android:textColor="@color/black"
                   android:layout_marginTop="@dimen/_20sdp" />
               <EditText
                   android:id="@+id/nameofemp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:ems="10"
                   android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                   android:drawablePadding="10dp"
                   android:backgroundTint="@color/teal_300"
                   android:inputType="text"
                   android:hint="Enter Student Name."
                   android:layout_marginBottom="@dimen/_20sdp"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Gender"
                   android:gravity="left"
                   android:textStyle="bold"
                   android:textSize="@dimen/_16sdp"
                   android:layout_marginBottom="@dimen/_5sdp"
                   android:textColor="@color/black"
                   android:layout_marginTop="@dimen/_20sdp" />
               <RadioGroup
                   android:id="@+id/gender"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:checkedButton="@id/male">

                   <RadioButton
                       android:id="@+id/male"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Male"
                       android:layout_weight="1"
                       android:textSize="@dimen/_15sdp"
                       android:textColor="@color/black"
                       android:textStyle="bold"/>

                   <RadioButton
                       android:id="@+id/female"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Female"
                       android:layout_weight="1"
                       android:textSize="@dimen/_15sdp"
                       android:textColor="@color/black"
                       android:textStyle="bold"/>
               </RadioGroup>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="BirthDate"
                   android:gravity="left"
                   android:textStyle="bold"
                   android:textSize="@dimen/_16sdp"
                   android:layout_marginBottom="@dimen/_5sdp"
                   android:textColor="@color/black"
                   android:layout_marginTop="@dimen/_20sdp" />
               <EditText
                   android:id="@+id/edate"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:ems="10"
                   android:drawableLeft="@drawable/ic_baseline_today_24"
                   android:drawablePadding="10dp"
                   android:backgroundTint="@color/teal_300"
                   android:inputType="date"
                   android:hint="Enter Birthdate."
                   android:layout_marginBottom="@dimen/_20sdp"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Contact No."
                   android:gravity="left"
                   android:textStyle="bold"
                   android:textSize="@dimen/_16sdp"
                   android:layout_marginBottom="@dimen/_5sdp"
                   android:textColor="@color/black"
                   android:layout_marginTop="@dimen/_20sdp" />
               <EditText
                   android:id="@+id/enumber"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:ems="10"
                   android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                   android:drawablePadding="10dp"
                   android:backgroundTint="@color/teal_300"
                   android:inputType="number"
                   android:hint="Enter Contact No."
                   android:layout_marginBottom="@dimen/_20sdp"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Email"
                   android:gravity="left"
                   android:textStyle="bold"
                   android:textSize="@dimen/_16sdp"
                   android:layout_marginBottom="@dimen/_5sdp"
                   android:textColor="@color/black"
                   android:layout_marginTop="@dimen/_20sdp" />
               <EditText
                   android:id="@+id/eemail"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:ems="10"
                   android:drawableLeft="@drawable/ic_baseline_email_24"
                   android:drawablePadding="10dp"
                   android:backgroundTint="@color/teal_300"
                   android:inputType="textEmailAddress"
                   android:hint="Enter Email."
                   android:layout_marginBottom="@dimen/_20sdp"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Std"
                   android:gravity="left"
                   android:textStyle="bold"
                   android:textSize="@dimen/_16sdp"
                   android:layout_marginBottom="@dimen/_5sdp"
                   android:textColor="@color/black"
                   android:layout_marginTop="@dimen/_20sdp" />
               <Spinner
                   android:id="@+id/spinner"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"

                   android:textSize="@dimen/_16sdp"
                   android:layout_marginBottom="@dimen/_20sdp"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Div"
                   android:gravity="left"
                   android:textStyle="bold"
                   android:textSize="@dimen/_16sdp"
                   android:layout_marginBottom="@dimen/_5sdp"
                   android:textColor="@color/black"
                   android:layout_marginTop="@dimen/_20sdp" />
               <EditText
                   android:id="@+id/salary"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:ems="10"
                   android:drawableLeft="@drawable/ic_baseline_account_balance_wallet_24"
                   android:drawablePadding="10dp"
                   android:backgroundTint="@color/teal_300"
                   android:inputType="text"
                   android:hint="Enter Div."
                   android:layout_marginBottom="@dimen/_20sdp"
                   />

               <com.google.android.material.button.MaterialButton
                   android:id="@+id/submitemp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Add"
                   android:backgroundTint="@color/cardview_dark_background"
                   app:cornerRadius="@dimen/_10sdp"
                   android:layout_marginBottom="@dimen/_5sdp"
                   android:layout_marginTop="@dimen/_15sdp"
                   />

           </LinearLayout>
       </androidx.cardview.widget.CardView>

   </ScrollView>